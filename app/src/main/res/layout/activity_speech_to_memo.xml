<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SpeechToMemoActivity"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">

    <Button
        android:id="@+id/activity_speech_to_memo_record_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

         />


    <EditText
        android:id="@+id/activity_speech_to_memo_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_speech_to_memo_record_button"
        android:layout_margin="20dp"/>


</LinearLayout>